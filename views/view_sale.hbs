<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-5 text-left ">
            <label class="col-form-label font-weight-bold" for="title">Name:  </label> {{saleTitle}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left ">
            <label class="col-form-label font-weight-bold" for="title">Name:  </label> {{salePrice}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left">
            <label class="col-form-label font-weight-bold" for="content">Description: </label> {{saleBody}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left ">
            <label class="col-form-label font-weight-bold" for="key">Key: </label> {{saleKey}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left font-weight-bold">
            <span><a class="btn btn-danger" role="button" aria-pressed="true" href="/sales/delete?key={{ saleKey }}"><i data-feather="trash-2"></i> Delete Product</a></span>
            <span><a class="btn btn-success" role="button" aria-pressed="true" href="/sales/edit?key={{ saleKey }}"><i data-feather="edit"></i> Edit Product</a></span>
        </div>
    </div>
</div>