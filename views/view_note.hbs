<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-5 text-left ">
            <label class="col-form-label font-weight-bold" for="title">Title:  </label> {{noteTitle}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left">
            <label class="col-form-label font-weight-bold" for="content">Content: </label> {{noteBody}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left ">
            <label class="col-form-label font-weight-bold" for="key">Key: </label> {{noteKey}}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 text-left font-weight-bold">
            <span><a class="btn btn-danger" role="button" aria-pressed="true" href="/notes/delete?key={{ noteKey }}"><i data-feather="trash-2"></i> Delete Note</a></span>
            <span><a class="btn btn-success" role="button" aria-pressed="true" href="/notes/edit?key={{ noteKey }}"><i data-feather="edit"></i> Edit Note</a></span>
        </div>
    </div>
</div>