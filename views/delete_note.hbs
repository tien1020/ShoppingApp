
<form method="post">
    <div class="container-fluid form-group justify-content-center">
        <div class="row justify-content-center">
            <div class="col text-center">
                Do you want to delete the note title: {{noteTitle}} - key: {{noteKey}}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col text-center">
                <span><a class="btn btn-danger" role="button" aria-pressed="true" href="/notes/destroy?key={{ noteKey }}"><i data-feather="trash-2"></i></a></span>
                <span><a class="btn btn-info" role="button" aria-pressed="true" href="/notes/viewList"><i data-feather="x"></i></a></span>
            </div>
        </div>
    </div>
</form>